{
  "env": {
      "es2021": true,
      "node": true,
      "jest": true
  },
  "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint",
      "prettier"
  ],
  "rules": {
    "class-methods-use-this": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "no-console": "off",
    "camelcase": "off",
    "prettier/prettier": "error",
    "import/extensions": [
      "error",
      { "ignorePackeges": "ts" }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
